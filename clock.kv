<RobotoLabel@Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)


BoxLayout:
    orientation: 'vertical'

    RobotoLabel:
        id: time_label
        text: '[b]00[/b]:00:00'
        font_size: 100

    BoxLayout:
        orientation: 'horizontal'
        height: 90
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop_button
            text: 'Start'
            on_press: app.start_stop()

        RobotoButton:
            id: reset_button
            text: 'Reset'
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'
            on_press: app.reset()

    RobotoLabel:
        id: stopwatch_label
        text: '00:00.[size=40]00[/size]'