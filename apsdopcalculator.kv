BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        id: top
        size_hint: (1, 1)

        Button:
            id: cp
            text: 'CP details'
            on_press: app.input_cp()

        Button:
            id: vsl
            text: 'Vessel details'
            on_press: app.input_vsl()

        Button:
            id: add
            text: 'Add element'
            on_press: app.add_element()

    BoxLayout:
        orientation: 'vertical'
        id: list
        size_hint: (1, 8)

    BoxLayout:
        orientation: 'horizontal'
        id: bottom
        size_hint: (1, 1)

        Button:
            id: reset
            text: 'Reset elements'
            on_press: app.reset()

        Button:
            id: calc
            text: 'Calculate'
            on_press: app.calculate()

        Button:
            id: dop
            text: 'DOP rate'